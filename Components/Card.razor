@using Notes.Models
@using Notes.Utilities
@inject IJSRuntime JsRuntime
@inject IDialogService DialogService
<MudPaper Elevation="3" Class="theme-paper" style="height:90%;overflow: auto;">
    <MudCard>
        <MudCardContent>
            <MudText Typo="Typo.h5" GutterBottom="true">@ParentNote.Name</MudText>
            <MudText Typo="Typo.body2" Color="Color.Secondary">
                Created: @ParentNote.CreatedAt.ToShortDateString()
            </MudText>
        </MudCardContent>
        <MudCardActions Class="justify-end">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="EditPrompt">
                Edit
            </MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="DeletePrompt">
                Delete
            </MudButton>
        </MudCardActions>
    </MudCard>
</MudPaper>  
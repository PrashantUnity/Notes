@using Notes.Utilities
@using Notes.Models
<MudDialog MaxWidth="MaxWidth.Medium" FullHeight="true">
    <DialogContent>
        <MudCard>
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudAvatar Color="Color.Secondary">I</MudAvatar>
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.body1">@Helper.User?.Name</MudText>
                    <MudText Typo="Typo.body2">@Helper.User?.Email</MudText>
                </CardHeaderContent>
                <CardHeaderActions>
                    <MudIconButton Icon="@Icons.Material.Filled.Verified" Color="Color.Default"/>
                </CardHeaderActions>
            </MudCardHeader>
            <MudCardMedia Image="@Helper.User!.Picture" Height="250"/>
            <MudCardContent>
                <MudText Typo="Typo.body2">Sub : @Helper.User.Sub</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudIconButton Icon="@Icons.Material.Filled.Favorite" Color="Color.Default" OnClick="Submit"/>
            </MudCardActions>
        </MudCard>
    </DialogContent>
</MudDialog>

